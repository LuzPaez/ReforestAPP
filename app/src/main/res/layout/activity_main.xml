<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/logo"
        />
    <TextView
        android:id ="@+id/txtNombreAPP"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:text="ReforestAPP"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#1A7A5F"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id ="@+id/txtBienvenido"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="¡Bienvenidos!"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#18AE00"
        android:layout_marginBottom="5sp"
        />
    <TextView
        android:id ="@+id/TxtIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:text="Iniciar Sesión"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#1A7A5F"
        android:layout_marginBottom="10sp"
        />

    <TextView
        android:id="@+id/TxtCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa tu correo electrónico"
        android:gravity="left"
        android:textColor="#00805C"
        android:textSize="16sp"
        android:paddingStart="60sp"
        android:layout_marginTop="20sp"
        />


    <EditText
        android:id="@+id/EdText_Correo"
        android:layout_width="300sp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:hint="nombre@correo.com"
        android:textSize="14sp"
        android:paddingStart="20dp"
        android:background="@drawable/borde_entrada"
        android:layout_margin="10sp"
        />

    <TextView
        android:id="@+id/TxtContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa tu contraseña"
        android:gravity="left"
        android:textColor="#00805C"
        android:textSize="16sp"
        android:paddingStart="60sp"
        android:layout_marginTop="15sp"
        />
    <EditText
        android:id="@+id/EdText_Contrasena"
        android:layout_width="300sp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:hint="nombre@correo.com"
        android:textSize="14sp"
        android:paddingStart="20dp"
        android:background="@drawable/borde_entrada"
        android:layout_margin="10sp"
        />

    <TextView
        android:id="@+id/Link_OlvidoContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste tu contraseña?"
        android:gravity="right"
        android:textColor="#00805C"
        android:textSize="16sp"
        android:layout_marginTop="14sp"
        android:paddingEnd="53sp"
        android:textColorLink="#7FF066"
        />

    <Button
        android:id="@+id/btn_Ingresar"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ingresar"
        android:layout_margin="30dp"
        android:backgroundTint="#00674B"/>

    <TextView
        android:id="@+id/Link_Crear_Cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear cuenta"
        android:gravity="center"
        android:textColor="#00805C"
        android:textSize="16sp"
        android:textColorLink="#7FF066"
        />


</LinearLayout>

