<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistroUsurarioRA">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/logo"
        />
    <TextView
        android:id ="@+id/txtNombreAPP"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:text="ReforestAPP"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#1A7A5F"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id ="@+id/TxtRegistroUser"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:text="Registro de usuario"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#1A7A5F"
        android:layout_marginBottom="10sp"
        />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:text="Para acceder a la aplicación, por favor, registre los siguientes datos." />


    <!-- ScroollView-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TxtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="left"
                android:paddingStart="53sp"
                android:text="Ingrese una dirección de correo electrónico"
                android:textColor="#00805C"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/EdText_Correo"
                android:layout_width="300sp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/borde_entrada"
                android:ems="10"
                android:hint="nombre@correo.com"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TxtNomUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="left"
                android:paddingStart="53sp"
                android:text="Ingrese un nombre de usuario"
                android:textColor="#00805C"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/EdText_NomUsuario"
                android:layout_width="300sp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/borde_entrada"
                android:ems="10"
                android:hint="Nombre, Apellido o Alias"
                android:inputType="text"
                android:paddingStart="20dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TxtConstraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="left"
                android:paddingStart="53sp"
                android:text="Ingrese una contraseña segura"
                android:textColor="#00805C"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/EdText_Contraseña"
                android:layout_width="300sp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/borde_entrada"
                android:ems="10"
                android:hint="contraseña"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:textSize="14sp" />


            <RadioButton
                android:id="@+id/RBtn_Condiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Necesitamos que ingreses la dirección de correo con la que te registraste y te enviaremos un código para restablecer tu contraseña."
                android:layout_marginEnd="50sp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="50sp"
                android:layout_marginBottom="20sp"
                />

            <Button
                android:id="@+id/btn_Registrarse"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="#00674B"
                android:text="Registrarse" />

            <TextView
                android:id="@+id/Link_VolverIni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:gravity="center"
                android:text="Volver: Inicio de sesión"
                android:textColor="#00805C"
                android:textColorLink="#7FF066"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>