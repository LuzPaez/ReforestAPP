<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OlvidoContrasena">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/logo"
        />
    <TextView
        android:id ="@+id/txtNombreAPP"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:text="ReforestAPP"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#1A7A5F"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id ="@+id/TxtRecupPassword"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:text="Recuperar contraseña"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#1A7A5F"
        android:layout_marginBottom="10sp"
        />

    <TextView
        android:id="@+id/Txt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Necesitamos que ingreses la dirección de correo con la que te registraste y te enviaremos un código para restablecer tu contraseña."
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingStart="35sp"
        android:paddingEnd="35sp"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:id="@+id/Txt_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escribe tu correo electronico"
        android:gravity="left"
        android:textColor="#006804"
        android:textSize="16sp"
        android:paddingStart="55sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="5sp"
        />

    <EditText
        android:id="@+id/EdText_Correo"
        android:layout_width="300sp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:hint="nombre@correo.com"
        android:textSize="14sp"
        android:paddingStart="20dp"
        android:background="@drawable/borde_entrada"
        android:layout_margin="10sp"
        android:layout_marginBottom="15sp"
        />

    <Button
        android:id="@+id/btn_EnviarCodigo"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:backgroundTint="#00674B"
        android:text="Enviar Código" />

    <TextView
        android:id="@+id/Link_VolverIni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver: Inicio de Sesión"
        android:gravity="center"
        android:textColor="#00805C"
        android:textSize="16sp"
        android:textColorLink="#7FF066"
        />




</LinearLayout>